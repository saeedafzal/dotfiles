window {
    margin: 0px;
    border: 5px solid #24283b;
    background-color: #24283b;
    border-radius: 15px;
}

#input {
    padding: 4px;
    margin: 4px;
    padding-left: 20px;
    border: none;
    color: #fff;
    font-weight: bold;
    background-color: #fff;
    background: linear-gradient(90deg, #394b70 0%, #7aa2f7 100%);
    outline: none;
    border-radius: 15px;
    margin: 10px;
    margin-bottom: 2px;
}

#input:focus {
    border: 0px solid #fff;
    margin-bottom: 0px;
}

#inner-box {
    margin: 4px;
    border: 10px solid #24283b;
    font-weight: bold;
    background-color: #24283b;
    border-radius: 15px;
}

#outer-box {
    margin: 0px;
    border: none;
    border-radius: 15px;
    background-color: #24283b;
}

#scroll {
    margin-top: 5px;
    border: none;
    border-radius: 15px;
    margin-bottom: 5px;
}

#text:selected {
    color: #fff;
    margin: 0px 0px;
    border: none;
    border-radius: 15px;
}

#entry {
    margin: 5px 0px;
    border: none;
    border-radius: 15px;
    background-color: transparent;
}

#entry:selected {
    margin: 5px 0px;
    border: none;
    border-radius: 15px;
    background: linear-gradient(45deg, #394b70 30%, #7aa2f7 100%);
}

#img {
    padding-right: 1rem;
}
